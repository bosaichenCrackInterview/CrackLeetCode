// Not efficient. what is the time complexity?
class Solution {
    public int arrangeCoins(int n) {
        if (n == 0) {
            return 0;
        }
        
        int i = 1;
        while(i*(1+i)/2 <= n) {
            i++;
        }
        
        return i-1;
    }
}

// Efficient
public class Solution {
    public int arrangeCoins(int n) {
        return (int) ((Math.sqrt(1 + 8.0 * n) - 1) / 2);
    }
}
